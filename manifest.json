{
  "manifest_version": 3,
  "name": "Chaching Product Searcher",
  "version": "2.0.0",
  "description": "Find the best cashback deals on chaching.me for any product you're viewing",
  "permissions": [
    "activeTab",
    "storage",
    "notifications",
    "scripting"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker": "src/background/main.js"
  },
  "action": {
    "default_popup": "src/popup/index.html",
    "default_title": "Find cashback deals on Chaching"
  },
  "icons": {
    "16": "src/assets/ChaChing_Logo.png",
    "48": "src/assets/ChaChing_Logo.png",
    "128": "src/assets/ChaChing_Logo.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*/*",
        "http://*/*"
      ],
      "exclude_matches": [
        "*://*.chaching.me/*",
        "*://chaching.me/*",
        "*://*.google.com/*",
        "*://*.youtube.com/*",
        "*://*.facebook.com/*",
        "*://*.twitter.com/*",
        "*://*.linkedin.com/*",
        "*://*.github.com/*",
        "*://*.wikipedia.org/*",
        "*://*.reddit.com/*",
        "*://localhost/*",
        "*://127.0.0.1/*"
      ],
      "js": [
        "src/shared/utils.js",
        "src/content/brands.js",
        "src/content/detector.js",
        "src/content/main.js"
      ],
      "css": ["src/content/styles.css"],
      "run_at": "document_idle"
    }
  ],

  "web_accessible_resources": [
    {
      "resources": [
        "src/assets/ChaChing_Logo.png",
        "src/content/styles.css",
        "src/shared/utils.js",
        "src/content/brands.js",
        "src/content/detector.js",
        "src/content/main.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
} 